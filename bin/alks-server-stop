#!/usr/bin/env node
'use strict';

process.title = 'ALKS';

var program   = require('commander'),
    clc       = require('cli-color'),
    forever   = require('forever'),
    config    = require('../package.json'),
    utils     = require('../lib/utils');

program
    .version(config.version)
    .description('shows current developer configuration')
    .option('-v, --verbose', 'be verbose')
    .parse(process.argv);

var logger = 'dev-server-stop';

if(!utils.isOSX()){
    console.error(clc.red('The metadata server is only supported on OSX.'));
    process.exit(0);
}

console.error(clc.white('Stopping metadata server..'));

forever.list(false, function(err, list){
    if(list === null){
        console.error(clc.white('Metadata server is not running.'));
    }
    else{
        forever.stopAll();
        console.error(clc.white('Metadata server stopped.'));
    }
});